@page "{blockId:int}"
@model MyBlog.Pages.Admin.EditBlockModel
@{
    Layout = "Shared/_AdminLayout.cshtml";
}

<form method="post" asp-route-blockId="@Model.ContentBlock.Id">
    <select asp-items="@Model.ContentTypes" asp-for="@Model.InputModel.ContentType"></select>
    <br />
    <input value="@Model.ContentBlock.Content" asp-for="@Model.InputModel.Content"/>
    <br />
    <button type="submit">Сохранить</button>
</form>
